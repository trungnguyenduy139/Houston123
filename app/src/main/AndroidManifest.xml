<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.trungnguyen.android.houston123">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".HoustonApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:theme="@style/AppTheme.NoActionBar"
        android:supportsRtl="true"
        tools:ignore="AllowBackup,GoogleAppIndexingWarning">
        <activity
            android:name=".ui.main.MainActivity"
            android:label="@string/main_screen"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.listuser.UserListActivity"
            android:theme="@style/AppTheme"
            android:screenOrientation="portrait">

        </activity>
        <activity
            android:name=".ui.login.LoginActivity"
            android:label="@string/login_screen"
            android:launchMode="singleTop"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".ui.userdetail.DetailUserActivity"
            android:theme="@style/AppTheme"
            android:screenOrientation="portrait">
        </activity>

        <activity android:name=".ui.userdetail.UpdateDetailUserActivity"
            android:theme="@style/AppTheme"
            android:screenOrientation="portrait">
        </activity>

        <activity android:name=".ui.main.ChangePasswordActivity"
            android:theme="@style/AppTheme"
            android:label="@string/change_password"
            android:screenOrientation="portrait">
        </activity>


        <activity android:name=".ui.updateaccount.UpdateAccountActivity"
            android:theme="@style/AppTheme"
            android:label="@string/update_account_info"
            android:screenOrientation="portrait">

        </activity>

        <activity android:name=".ui.addto.SearchAndAddToActivity"
            android:theme="@style/AppTheme"
            android:label="@string/search_and_add"
            android:screenOrientation="portrait">
        </activity>
    </application>

</manifest>